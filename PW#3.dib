using System;
using System.Diagnostics;
using System.Threading;

#!csharp

class DefiniteIntegral
{
    // Многопоточная оптимизированная реализация    
    public static double Solve(double a, double b, Func<double, double> function, double step, int threadsNumber)
    {
        double result = 0.0;
        object lockObj = new object();

        Task[] tasks = new Task[threadsNumber];

        for (int i = 0; i < threadsNumber; i++)
        {
            int threadNumber = i;
            tasks[i] = Task.Run(() => ThreadMethod(ref result, threadNumber, a, b, function, step, threadsNumber, lockObj));
        }

        Task.WaitAll(tasks);

        return result;
    }
    
    static void ThreadMethod(ref double result, int threadNumber, double a, double b, Func<double, double> function, double step, int threadsNumber, object lockObj)
    {
        double A = a + threadNumber * (b - a) / threadsNumber;
        double B = a + (threadNumber + 1) * (b - a) / threadsNumber;
        int n = (int)((B - A) / step);
        double subResult = (function(A) / 2 + Enumerable.Range(1, n - 1).Select(j => function(A + (j * step))).Sum() + function(B) / 2) * step;

        lock (lockObj)
        {
            result += subResult;
        }
    }

    // Однопоточная реализация
    public static double Solve_1(double a, double b, Func<double, double> f, double step)
    {
        int n = (int)((b-a)/step);
        return (f(a)/2 + Enumerable.Range(1, n-1).Select((i)=> f(a+(i*step))).Sum() + f(b)/2)*step;
    }
    
    // Тест многопоточной отимизированной 2
    
}

